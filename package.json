{
  "name": "full-cycle-app",
  "version": "1.0.0",
  "description": "This repo aims to implement the full cycle of a front end application. From code to ssr, through docker image, CI/CD and deployment.",
  "scripts": {
    "clear": "rimraf build",
    "prepare": "cp .env.example .env",
    "build:client": "webpack --config webpack.client.config.js",
    "build:server": "webpack --config webpack.server.config.js",
    "dev": "webpack serve --config webpack.dev.config.js",
    "build": "npm run && npm run build:client && npm run build:server",
    "start:server": "node build/server/bundle.js",
    "serve:server": "nodemon --ignore 'build/**/*' --exec 'run-s clear build:server start:server'",
    "serve:client": "npm run gen && webpack serve --config webpack.client.config.js",
    "serve": "npm run gen && run-p serve:client serve:server",
    "build:docker": "docker build -t full-cycle-app:latest .",
    "serve:docker": "docker run -d -p 3000:3000 -p 8080:8080 --name full-cycle-app full-cycle-app:latest",
    "gen": "graphql-codegen --config codegen.yml --require dotenv/config",
    "docker": "npm run build:docker && npm run serve:docker"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexfromsofia/full-cycle-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexfromsofia/full-cycle-app/issues"
  },
  "homepage": "https://github.com/alexfromsofia/full-cycle-app#readme",
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@reduxjs/toolkit": "^1.7.1",
    "@types/express": "^4.17.13",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.2",
    "@types/serialize-javascript": "^5.0.2",
    "babel-loader": "^8.2.3",
    "dotenv-webpack": "^7.0.3",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "isomorphic-fetch": "^3.0.0",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "redux": "^4.1.2",
    "rimraf": "^3.0.2",
    "serialize-javascript": "^6.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
